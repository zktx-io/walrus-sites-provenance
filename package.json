  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zktx-io/walrus-sites-provenance.git"
  },
  "license": "ISC",
  "author": "daoauth",
  "type": "commonjs",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "format": "npx prettier --check .",
    "format:write": "npx prettier --write . --ignore-path .prettierignore",
